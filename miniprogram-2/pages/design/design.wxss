
.container {
  height: 100vh;
  background-color: #f7f9fc;
  display: flex;
  flex-direction: column;
}

/* 顶部自定义 TabBar */
.tab-header {
  height: 100rpx;
  background: #fff;
  display: flex;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active {
  color: #0052d9;
  font-weight: 600;
}

.active-bar {
  position: absolute;
  bottom: 0;
  width: 50rpx;
  height: 6rpx;
  background: #0052d9;
  border-radius: 3rpx;
  transform: translateX(-50%);
  transition: all 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

.main-scroll {
  flex: 1;
  overflow: hidden;
}

.panel {
  padding: 30rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.02);
}

.label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.sub-label {
  font-size: 24rpx;
  color: #0052d9;
  font-weight: 400;
  margin-left: 12rpx;
  background: #eef3fe;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 横向滑动标签 */
.horizontal-scroll {
  width: 100%;
}

.tag-row {
  display: flex;
  padding: 10rpx 0;
}

.tag {
  padding: 16rpx 32rpx;
  background: #f5f6f8;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
  white-space: nowrap;
  border: 2rpx solid transparent;
}

.tag.selected {
  background: #fff;
  color: #0052d9;
  border-color: #0052d9;
  font-weight: 600;
}

/* 颜色选择 */
.color-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 24rpx;
}

.color-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  border: 4rpx solid transparent;
  transition: all 0.2s;
}

.color-circle.active {
  border-color: #0052d9;
  transform: scale(1.15);
}

.custom-textarea {
  width: 100%;
  height: 180rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.action-button {
  width: 100% !important;
  height: 100rpx;
  background: linear-gradient(135deg, #0052d9 0%, #002b80 100%);
  color: #fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-top: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 82, 217, 0.3);
}

.action-button.loading {
  opacity: 0.8;
}

/* 结果区域 */
.result-display {
  margin-top: 50rpx;
  padding-bottom: 60rpx;
}

.res-label {
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 30rpx;
}

.res-img-box {
  width: 100%;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
  background: #fff;
}

.res-img-box image {
  width: 100%;
  display: block;
}

.res-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.res-actions button {
  flex: 1;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.prime-btn {
  background: #ff5f15;
  color: white;
}

/* 试衣特有 */
.setup-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.setup-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.setup-item text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.upload-placeholder {
  height: 360rpx;
  background: #f0f2f5;
  border-radius: 16rpx;
  border: 2rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.upload-placeholder.has-img {
  border: none;
  background: #fff;
}

.upload-placeholder image {
  width: 100%;
  height: 100%;
}