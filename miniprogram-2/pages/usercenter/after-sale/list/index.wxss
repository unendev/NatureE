.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.list-content {
  padding: 24rpx;
}

.after-sale-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  font-size: 26rpx;
}

.order-no {
  color: #666;
}

.status {
  color: #FF5F15;
  font-weight: 500;
}

.goods-info {
  display: flex;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
  border-top: 1rpx solid #f9f9f9;
  border-bottom: 1rpx solid #f9f9f9;
}

.goods-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  margin-right: 20rpx;
}

.goods-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.goods-attr {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
}

.btn {
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.contact-btn {
  border: 1rpx solid #ccc;
  color: #666;
}

.view-btn {
  border: 1rpx solid #FF5F15;
  color: #FF5F15;
  background-color: rgba(255, 95, 21, 0.05);
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
