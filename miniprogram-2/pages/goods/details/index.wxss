
.goods-detail-page {
  background: #f5f5f5;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  min-height: 100vh;
}

.goods-swiper {
  width: 100%;
  height: 750rpx;
  background: #fff;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 信息卡片 */
.goods-info-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.price-symbol {
  color: #fa4126;
  font-size: 32rpx;
  font-weight: bold;
}

.price-integer {
  color: #fa4126;
  font-size: 56rpx;
  font-weight: bold;
  margin: 0 4rpx;
}

.price-range {
  color: #fa4126;
  font-size: 32rpx;
  margin-left: 8rpx;
}

.sales-text {
  margin-left: auto;
  font-size: 24rpx;
  color: #999;
}

.goods-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.goods-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.service-list {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
  gap: 30rpx;
}

.service-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
}

.service-item t-icon {
  margin-right: 6rpx;
}

/* 选项卡片 */
.option-card {
  background: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.option-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f8f8f8;
}

.option-item:last-child {
  border-bottom: none;
}

.option-label {
  font-size: 28rpx;
  color: #999;
  width: 80rpx;
}

.option-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 20rpx;
}

/* 通用卡片 */
.section-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.more-link {
  font-size: 24rpx;
  font-weight: normal;
  color: #999;
  display: flex;
  align-items: center;
}

/* 评价 */
.comment-item {
  margin-bottom: 30rpx;
}

.comment-user {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.username {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}

.stars {
  color: #fa4126;
  font-size: 20rpx;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.comment-imgs {
  display: flex;
  gap: 16rpx;
}

.c-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

/* 详情图 */
.detail-content {
  display: flex;
  flex-direction: column;
}

.detail-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.detail-image {
  width: 100%;
  display: block;
}

/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx calc(10rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.left-action-group {
  display: flex;
  gap: 30rpx;
  padding-right: 20rpx;
}

.icon-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.icon-btn text {
  font-size: 20rpx;
  color: #333;
  margin-top: 4rpx;
}

.badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: #fa4126;
  color: #fff;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  z-index: 1;
}

.right-action-group {
  flex: 1;
}

.combined-btn {
  height: 80rpx;
  display: flex;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(250, 65, 38, 0.2);
}

.add-cart {
  flex: 1;
  background: #ffefe1;
  color: #ff8b00;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.buy-now {
  flex: 1;
  background: linear-gradient(135deg, #fa4126, #ff7043);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

/* Sku Popup */
.sku-popup-content {
  background: #fff;
  padding: 30rpx;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  /* 确保不被安全区拉伸到底部 */
  padding-bottom: env(safe-area-inset-bottom);
}

.sku-header {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.sku-goods-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  margin-top: -60rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.sku-info {
  flex: 1;
}

.sku-price {
  color: #fa4126;
  margin-bottom: 12rpx;
}

.sku-symbol {
  font-size: 32rpx;
  font-weight: bold;
}

.sku-num {
  font-size: 48rpx;
  font-weight: bold;
}

.sku-selected-text {
  font-size: 26rpx;
  color: #666;
}

.sku-scroll {
  max-height: 60vh;
}

.sku-section {
  margin-bottom: 30rpx;
}

.sku-section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.sku-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.sku-tag {
  padding: 12rpx 32rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #333;
  border: 2rpx solid transparent;
}

.sku-tag.active {
  background: #fff0ed;
  color: #fa4126;
  border-color: #fa4126;
}

.sku-tag.disabled {
  opacity: 0.4;
  color: #ccc;
}

.opt-price {
  font-size: 22rpx;
  color: #fa4126;
  opacity: 0.8;
}

.sku-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-top: 1rpx solid #f8f8f8;
}

.sku-footer {
  padding-top: 20rpx;
}