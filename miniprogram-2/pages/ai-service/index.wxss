.ai-service {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.chat-container {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.chat-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.message {
  display: flex;
  gap: 16rpx;
  max-width: 80%;
  width: fit-content;
}

.message.user {
  flex-direction: row;
  margin-left: auto;
  padding-right: 24rpx;
}

.message.user .content {
  margin-right: 16rpx;
  margin-left: 0;
  max-width: calc(100% - 120rpx);
}

.message.system {
  align-self: center;
  background: rgba(0, 0, 0, 0.05);
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #0052d9;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
}

.message.user .avatar {
  background: transparent;
}

.message.user .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.content {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  position: relative;
  word-break: break-all;
  max-width: calc(100% - 96rpx);
}

.message.user .content {
  background: #0052d9;
  color: white;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.message.user .time {
  text-align: right;
  color: rgba(255, 255, 255, 0.8);
}

.input-area {
  background: white;
  padding: 24rpx;
  border-top: 2rpx solid #eee;
}

.input-box {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  background: #0052d9;
  color: white;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  line-height: 72rpx;
}

.send-btn.loading {
  opacity: 0.7;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
  padding: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #999;
  border-radius: 50%;
  animation: loading 1s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes loading {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-8rpx);
  }
}

.quick-questions {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 24rpx 0;
}

.question-item {
  background: white;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #eee;
  transition: all 0.3s;
}

.question-item:active {
  background: #f5f5f5;
}

/* AIGC 功能区 */
.aigc-zone {
  margin-bottom: 24rpx;
}

.aigc-card {
  background: linear-gradient(135deg, #0052d9 0%, #002b80 100%);
  padding: 32rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(0, 82, 217, 0.2);
}

.aigc-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.aigc-desc {
  font-size: 24rpx;
  opacity: 0.8;
} 